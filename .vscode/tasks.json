// tasks.json schema https://code.visualstudio.com/docs/editor/tasks-appendix

{

    "version": "2.0.0",
    "windows": { },

    "tasks": [
        {
            "type": "cppbuild",
            "label": "[macOS-clang++] C++ 디버그 모드 빌드 (by RUZEN)",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g", // 디버그 옵션 
                "${file}", // 타겟 파일
                "-o", // 아웃풋 이름
                "../bin/${fileBasenameNoExtension}.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "디버거에서 생성된 작업입니다."
        },
        {
            "type": "cppbuild",
            "label": "[windows-cl.exe] c++ 디버그 모드 빌드 (by RUZEN)",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "..\\bin\\&{fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "&{fileDirname}"
            },
            "problemMatcher": "&msCompile",
            "group": {
                "kind": "build",
                "idDefault": true
            },
            "detail":  "Task generated by Debugger"
        },
        {
            "type": "shell",
            "label": "C/C++ 실행 (by RUZEN)",
            "command": "../bin/${fileBasenameNoExtension}.out",
            "args": [
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "test",
            },
            "detail": "디버거에서 생성된 작업입니다."
        },
        {
            "label": "Python3 실행 (by RUZEN)",
            "type": "shell",
            "command": "/usr/bin/python3",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "envs": {
                    "PYTHONIOENCODING": "UTF-8"
                }
            },
            "group": {
                "kind": "build",
            }
        }
    ]
}