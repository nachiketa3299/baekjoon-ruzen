// tasks.json schema https://code.visualstudio.com/docs/editor/tasks-appendix


{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++ clang++ [-g] 빌드 (by RUZEN)",
            "command": "/usr/bin/clang++",
            "args": [
                "-std=c++17",
                "-stdlib=libc++",
                "-g", // 디버그 옵션 
                "${file}", // 타겟 파일
                "-o", // 아웃풋 이름
                "../bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "디버거에서 생성된 작업입니다."
        },
        {
            "label": "Python3 실행 (by RUZEN)",
            "type": "shell",
            "command": "/usr/bin/python3",
            "args": [
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}",
                "envs": {
                    "PYTHONIOENCODING": "UTF-8"
                }
            },
            "group": {
                "kind": "build",
            }
        }
    ],
    "version": "2.0.0"
}